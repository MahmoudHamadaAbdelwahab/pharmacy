        </div>
    </div>
</div>
<div class="site-section">
    <div class="container">
        <div class="row">
            <div class="col-md-5 mr-auto">
                <div class="border text-center">
                
      @*               @if (Model.TbImages != null && Model.TbImages.Any())
                    {
                        int imageIndex = 0;
                        foreach (var image in Model.TbImages)
                        {
                            <div class="carousel-item @(imageIndex == 0 ? "active" : "")">
